<!DOCTYPE html>
{% load staticfiles %}
<html>
    <head lang="en">
        <meta charset="UTF-8" />
        <title>{% block title %}JPrints{% endblock %}</title>
    </head>
    <body>
        <img  width="100px" height="106px" src="{% static "images/Django_Reinhardt.jpg" %}" alt="Logo" />
        {% block body_block %}
        {% endblock %}
        <hr />
        <div>
            <ul>
                <li><a href="{% url 'index' %}">Index</a></li>
                <li><a href="{% url 'core:register' %}">Register</a></li>
                {% if user.is_authenticated %}
                    <li><a href="{% url 'publication:index' %}">Publications</a></li>
                    <li><a href="{% url 'publication:add_publication' %}">New Publication</a></li>
                    <li><a href="{% url 'core:logout' %}">Logout</a></li>
                {% else %}
                    <li><a href="{% url 'publication:add_publication' %}">New Publication</a></li>
                    <li><a href="{% url 'core:login' %}">Login</a></li>
                {% endif %}
            </ul>
        </div>
    </body>
</html>

